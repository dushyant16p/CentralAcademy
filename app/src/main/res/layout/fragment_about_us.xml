<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image with Title -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/about_us_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/aboutus_image"
                android:src="@drawable/aboutus"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#80000000"/>

            <TextView
                android:id="@+id/about_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/about_us"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Heading -->
        <TextView
            android:id="@+id/about_us_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/about_us"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <!-- Paragraphs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph3"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph4"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <!-- Additional Image -->
        <ImageView
            android:id="@+id/about_welcome"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/aboutus1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/aboutus_image"/>

        <!-- Image with Two People -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/person1"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/person2"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <!-- Section Heading -->
        <TextView
            android:id="@+id/about_us_heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/about_us_heading"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <!-- More Paragraphs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph5"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph6"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph7"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">
            <TextView
                android:id="@+id/about_us_paragraph8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/about_us_paragraph8"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:justificationMode="inter_word"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
